@{
    ViewData["Title"] = "Vendas";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-6">
        <form asp-action="SimpleSearch" class="form-horizontal">
            <fieldset>
                <legend>Pesquisa simples</legend>

                <div class="form-group">
                    <label for"minDate" class="col-lg-2 control-label">Data minima</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div><!--col lg 10-->
                </div><!--Form group-->

                <div class="form-group">
                    <label for"maxDate" class="col-lg-2 control-label">Data máxima</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div><!--col lg 10-->
                </div><!--Form group-->

                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Pesquisar</button>
                    </div><!--col lg 10-->
                </div><!--form group-->

            </fieldset>
        </form><!--Formulário de pesquisa-->
    </div><!--Col-md-6-->
</div><!--Row-->

<div class="row">
    <div class="col-md-6">
        <form asp-action="GroupingSearch" class="form-horizontal">
            <fieldset>
                <legend>Pesquisa agrupada</legend>

                <div class="form-group">
                    <label for"minDate" class="col-lg-2 control-label">Data minima</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div><!--col lg 10-->
                </div><!--Form group-->

                <div class="form-group">
                    <label for"maxDate" class="col-lg-2 control-label">Data máxima</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div><!--col lg 10-->
                </div><!--Form group-->

                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Pesquisar</button>
                    </div><!--col lg 10-->
                </div><!--form group-->

            </fieldset>
        </form><!--Formulário de pesquisa-->
    </div><!--Col-md-6-->
</div><!--Row-->